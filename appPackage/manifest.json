{
	"$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
	"manifestVersion": "1.16",
	"version": "1.0.4",
	"id": "${{TEAMS_APP_ID}}",
	"packageName": "com.microsoft.teams.extension",
	"developer": {
		"name": "Cotton Prompt",
		"websiteUrl": "https://cottonprompt.com",
		"privacyUrl": "https://cottonprompt.com/pages/privacy-policy",
		"termsOfUseUrl": "https://cottonprompt.com/pages/terms-of-service"
	},
	"icons": {
		"color": "color.png",
		"outline": "outline.png"
	},
	"name": {
		"short": "Cotton Prompt - ${{APP_NAME_SUFFIX}}",
		"full": "Full name for CottomPromptApp"
	},
	"description": {
		"short": "Short description of CottomPromptApp",
		"full": "Full description of CottomPromptApp"
	},
	"accentColor": "#FFFFFF",
	"bots": [],
	"composeExtensions": [],
	"staticTabs": [
		{
			"entityId": "index0",
			"name": "Platform",
			"contentUrl": "${{TAB_ENDPOINT}}/tab",
			"websiteUrl": "${{TAB_ENDPOINT}}/tab",
			"scopes": [
				"personal"
			]
		}
	],
	"permissions": [
		"identity",
		"messageTeamMembers"
	],
	"validDomains": [
		"${{TAB_DOMAIN}}"
	],
	"webApplicationInfo": {
		"id": "${{MICROSOFT_ENTRA_APP_ID}}",
		"resource": "api://${{TAB_DOMAIN}}/${{MICROSOFT_ENTRA_APP_ID}}"
	}
}